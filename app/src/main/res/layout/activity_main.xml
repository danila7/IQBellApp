<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="@string/send_on_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/on_button"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:layout_marginTop="32dp"
            android:onClick="sendOn"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="@string/send_off_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/off_button"
            app:layout_constraintTop_toTopOf="@+id/on_button"
            app:layout_constraintStart_toEndOf="@+id/on_button"
            android:onClick="sendOff"
            android:layout_marginStart="24dp"/>
    <Button
            android:text="@string/refresh_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/refresh_button"
            app:layout_constraintTop_toTopOf="@+id/off_button" app:layout_constraintStart_toEndOf="@+id/off_button"
            android:layout_marginStart="24dp"/>
    <Button
            android:text="@string/check_connection_text"
            android:layout_width="wrap_content"
            android:onClick="checkConnection"
            android:layout_height="wrap_content"
            android:id="@+id/check_button"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/refresh_button" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/on_button" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="@+id/refresh_button"/>
</androidx.constraintlayout.widget.ConstraintLayout>