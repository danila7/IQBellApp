<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HomeFragment">

    <com.leondzn.simpleanalogclock.SimpleAnalogClock
            android:id="@+id/clock"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:faceTint="@color/colorPrimary"
            app:minuteTint="@color/colorPrimaryDark"
            app:hourTint="@color/colorPrimary"
            app:secondTint="@color/colorAccent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" android:layout_marginStart="16dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/unknown"
            android:id="@+id/time"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/clock"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="32dp"
            android:textStyle="bold" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.07"/>
    <TextView
            android:text="@string/unknown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/date" app:layout_constraintStart_toStartOf="@+id/time"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/time" android:textSize="18sp"
            android:textStyle="bold"/>
    <Button
            android:text="@string/workshop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/workshop" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toTopOf="@+id/lineika"/>
    <Button
            android:text="@string/lineika"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lineika" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="70dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/info"/>
    <Button
            android:text="@string/average_ringing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/average_ringing" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/lineika"/>
    <TextView
            android:text="@string/manual_bells_control"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/info" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/clock" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.13"/>

</androidx.constraintlayout.widget.ConstraintLayout>