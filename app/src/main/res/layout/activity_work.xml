<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".WorkActivity">

    <Button
            android:text="@string/get_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="getInfo"
            android:id="@+id/get_time"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintTop_toTopOf="@+id/current_time"
            android:layout_marginBottom="6dp" app:layout_constraintBottom_toBottomOf="@+id/current_date"/>
    <TextView
            android:text="@string/current_t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/current_time_label"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="28dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp"/>
    <TextView
            android:text="@string/current_d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/current_date_label" app:layout_constraintStart_toStartOf="@+id/current_time_label"
            app:layout_constraintTop_toBottomOf="@+id/current_time_label" android:layout_marginTop="16dp"/>
    <TextView
            android:text="@string/unknown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/current_time"
            app:layout_constraintBottom_toBottomOf="@+id/current_time_label"
            app:layout_constraintStart_toEndOf="@+id/current_time_label" android:layout_marginStart="32dp"
            android:textStyle="bold"/>
    <TextView
            android:text="@string/unknown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/current_date" app:layout_constraintStart_toEndOf="@+id/current_date_label"
            app:layout_constraintBottom_toBottomOf="@+id/current_date_label" android:layout_marginStart="32dp"
            android:textStyle="bold"/>
    <TextView
            android:text="@string/new_t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/new_time_label" app:layout_constraintStart_toStartOf="@+id/current_date_label"
            android:layout_marginTop="48dp" app:layout_constraintTop_toBottomOf="@+id/current_date_label"
            android:textStyle="italic"/>
    <TextView
            android:text="@string/new_d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/new_date_label" app:layout_constraintStart_toStartOf="@+id/new_time_label"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/new_time_label"
            android:textStyle="italic"/>
    <TextView
            android:text="@string/unknown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/new_time" app:layout_constraintStart_toEndOf="@+id/new_time_label"
            android:layout_marginStart="32dp"
            app:layout_constraintBottom_toBottomOf="@+id/new_time_label" android:textStyle="bold|italic"/>
    <TextView
            android:text="@string/unknown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/new_date" app:layout_constraintStart_toEndOf="@+id/new_date_label"
            app:layout_constraintBottom_toBottomOf="@+id/new_date_label" android:layout_marginStart="32dp"
            android:textStyle="bold|italic"/>
    <Button
            android:text="@string/set_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/set_time" app:layout_constraintStart_toStartOf="@+id/new_date_label"
            app:layout_constraintTop_toBottomOf="@+id/new_date_label" android:layout_marginTop="16dp"/>
    <Button
            android:text="@string/set_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/set_date" app:layout_constraintStart_toStartOf="@+id/new_date"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/new_date"/>
    <Button
            android:text="@string/apply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/apply" android:layout_marginTop="6dp"
            app:layout_constraintTop_toTopOf="@+id/new_time" app:layout_constraintBottom_toBottomOf="@+id/new_date"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>