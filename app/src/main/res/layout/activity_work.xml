<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".WorkActivity">

    <Button
            android:text="@string/get_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="getInfo"
            android:id="@+id/get_time"
            app:layout_constraintStart_toStartOf="@+id/set_time"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/set_time"/>
    <TextView
            android:text="@string/current_t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/current_time_label"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="28dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp"/>
    <TextView
            android:text="@string/current_d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/current_date_label" app:layout_constraintStart_toStartOf="@+id/current_time_label"
            app:layout_constraintTop_toBottomOf="@+id/current_time_label" android:layout_marginTop="16dp"/>
    <TextView
            android:text="@string/unknown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/current_time"
            app:layout_constraintBottom_toBottomOf="@+id/current_time_label"
            app:layout_constraintStart_toEndOf="@+id/current_time_label" android:layout_marginStart="16dp"
            android:textStyle="bold"/>
    <TextView
            android:text="@string/unknown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/current_date"
            app:layout_constraintBottom_toBottomOf="@+id/current_date_label"
            android:textStyle="bold" app:layout_constraintStart_toStartOf="@+id/current_time"/>
    <TextView
            android:text="@string/new_t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/new_time_label" app:layout_constraintStart_toStartOf="@+id/current_date_label"
            android:layout_marginTop="48dp" app:layout_constraintTop_toBottomOf="@+id/current_date_label"
            android:textStyle="italic"/>
    <TextView
            android:text="@string/new_d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/new_date_label" app:layout_constraintStart_toStartOf="@+id/new_time_label"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/new_time_label"
            android:textStyle="italic"/>
    <TextView
            android:text="@string/unknown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/new_time"
            app:layout_constraintBottom_toBottomOf="@+id/new_time_label" android:textStyle="bold|italic"
            app:layout_constraintStart_toStartOf="@+id/current_date"/>
    <TextView
            android:text="@string/unknown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/new_date"
            app:layout_constraintBottom_toBottomOf="@+id/new_date_label"
            android:textStyle="bold|italic" app:layout_constraintStart_toStartOf="@+id/current_date"/>
    <Button
            android:text="@string/set_time"
            android:onClick="timePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/set_time"
            app:layout_constraintTop_toBottomOf="@+id/new_date_label" android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="@+id/new_date_label"
    />
    <Button
            android:text="@string/set_date"
            android:onClick="datePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/set_date"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp"
            app:layout_constraintStart_toStartOf="@+id/new_date" android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/set_time"/>
    <Button
            android:text="@string/apply"
            android:onClick="sendTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/apply"
            app:layout_constraintStart_toStartOf="@+id/set_date"
            app:layout_constraintBottom_toBottomOf="@+id/get_time"/>
    <Button
            android:text="@string/set_sys_time"
            android:onClick="setSysTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/set_sys_time" app:layout_constraintStart_toStartOf="@+id/get_time"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="@+id/apply"
            android:layout_marginEnd="8dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/get_time"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            app:menu="@menu/menu_bottom_navigation"
            app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>